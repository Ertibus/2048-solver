<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="800"
             x:Class="TwoZeroFourEight.Views.GameBoardView">
  <UserControl.Styles>
    <Style Selector="ItemsControl > ContentPresenter">
      <Setter Property="Grid.Row" Value="{Binding PosX}"/>
      <Setter Property="Grid.Column" Value="{Binding PosY}"/>
    </Style>
  </UserControl.Styles>


  <ItemsControl Items="{Binding Items}">
    <ItemsControl.ItemsPanel>
      <ItemsPanelTemplate>
        <Grid ShowGridLines="True" RowDefinitions="*,*,*,*,*,*,*" ColumnDefinitions="*,*,*,*,*,*,*,*">
        </Grid>
      </ItemsPanelTemplate>
    </ItemsControl.ItemsPanel>

    <ItemsControl.DataTemplates>
      <DataTemplate>
        <Border Background="Gray"
                BorderBrush="Black"
                BorderThickness="2"
                CornerRadius="3"
                Padding="4"
                Width="100"
                Height="100">
          <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Number}"/>
        </Border>
      </DataTemplate>
    </ItemsControl.DataTemplates>
  </ItemsControl>
</UserControl>
